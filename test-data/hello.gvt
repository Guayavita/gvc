package main

fun add(a: i32, b: i32) : i32 {
    return a + b
}

fun main() : none {
    def x: i32 = 10
    def y: i32 = 20
    def msg: string = "Hello, World!"

    def z: i32 = add(x, y) * 2
    def flag: bool = z > 30 && true

    print(msg)

    if flag {
        print("Flag is true")
    } else {
        print("Flag is false")
    }

    while x < 15 {
        print("still looping")
        def tmp: i32 = x + 1
        // we cannot reassign x = tmp yet
    }

    for def n in [1, 2, 3, 4] {
        print(n)
    }
}
